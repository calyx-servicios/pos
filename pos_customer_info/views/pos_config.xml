<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="pos_config_custom_info">
	     <field name="name">pos.config.custom_info</field>
	     <field name="model">pos.config</field>
	     <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
	     <field name="arch" type="xml">
	         <xpath expr="//h2[@name='order']" position="before">
	         	<h2 name="customer_info">Ticket options</h2>
				 <div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="receipt_customer_information" nolabel="1"/>
						</div>
						<div class="o_setting_right_pane" title="POS Extra-info">
							<label for="receipt_customer_information"/>
							<div class="text-muted" id="pos_customer_info">
								Show customer info
							</div>
						</div>
					</div>
				</div>
	         </xpath>
	     </field>
	 </record>
</odoo>
